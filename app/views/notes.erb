<div class="container">
  
  <h2>Your notes</h2>
  <ul>
    <% @notes.each do |note| %>
      <li class="note_title"><%= note.title %></li>
      <li class="note_content"> --- <%= note.content %> ---</li> 
      <a href="/notes/<%= note.id %>/edit" title="/notes/<%= note.id %>/edit">Edit</a>

    <form action="/notes/<%=note.id%>/delete" method="POST">
      <input type="submit" value="Delete">
    <% end %>
  </ul>

  <a href="/">Back to Home</a>
  <br>
  <a href="/create">Create another note</a>
</div>
